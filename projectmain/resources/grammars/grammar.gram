public <calculatorsimple> = ([what is] [<dig1> hundred] [<dig2>] [<dig1>] [digunique] <operator> [<dig1> hundred] [<dig2>] [<dig1>] [digunique]);
public <calculatorcomplex> = ([what is] [the square root of ] [<dig1> hundred] [<dig2>] [<dig1>] [digunique] [squared]);

